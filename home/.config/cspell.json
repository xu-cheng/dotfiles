{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "language": "en,en-US",
    "dictionaries": [
        "userWords"
    ],
    "dictionaryDefinitions": [
        {
            "name": "userWords",
            "path": "~/.config/nvim/spell/en.utf-8.add"
        }
    ],
    "languageSettings": [
        {
            "languageId": "latex",
            "ignoreRegExpList": [
                "\\\\\\w+([ %\\{])?"
            ]
        }
    ]
}
