// vim: set ft=jsonc:
{
    "editor.fontFamily": "Monaco, Symbols Nerd Font Mono, monospace",
    "editor.fontSize": 13,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.renderWhitespace": "boundary",
    "editor.stickyScroll.enabled": true,
    "editor.wordWrap": "on",
    "extensions.ignoreRecommendations": true,
    "files.eol": "\n",
    "files.watcherExclude": {
        "**/target/**": true
    },
    "telemetry.feedback.enabled": false,
    "telemetry.telemetryLevel": "off",
    "terminal.external.osxExec": "Ghostty.app",
    "terminal.integrated.fontFamily": "Monaco, SymbolsNFM, monospace",
    "terminal.integrated.macOptionIsMeta": true,
    "update.showReleaseNotes": false,
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.iconTheme": "catppuccin-frappe",
    "workbench.welcomePage.walkthroughs.openOnInstall": false,
    // Neovim Mode
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1,
    },
    "extensions.supportUntrustedWorkspaces": {
        "asvetliakov.vscode-neovim": {
            "supported": true,
        },
    },
    "vscode-neovim.logOutputToConsole": true,
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    // Git
    "git.autofetch": true,
    "gitlens.blame.avatars": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.avatars": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.telemetry.enabled": false,
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.views.repositories.avatars": false,
    // Error Lens
    "errorLens.excludeBySource": [
        "cSpell",
    ],
    // cSpell
    "cSpell.import": [
        "~/.config/cspell.json"
    ],
    // Path Autocomplete
    "path-autocomplete.triggerOutsideStrings": true,
    // Rust
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.procMacro.enable": true,
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "skip_trivial",
    "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
    "rust-analyzer.lens.enable": true,
    "rust-analyzer.lens.run.enable": true,
    "rust-analyzer.lens.debug.enable": true,
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    // Python
    "jupyter.askForKernelRestart": false,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvironment": false,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    // Ruby
    "[ruby]": {
        "editor.defaultFormatter": "Shopify.ruby-lsp",
    },
    // Web
    "[html]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    "[javascript]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    "[css]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    "[scss]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    // LaTeX
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.linting.chktex.exec.args": [
        "--globalrc",
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {},
        },
    ],
    "latex-workshop.message.badbox.show": "none",
    // Json
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
    },
    // Yaml
    "redhat.telemetry.enabled": false,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
    },
}
