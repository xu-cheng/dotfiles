{
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.iconTheme": "catppuccin-frappe",
    "editor.fontFamily": "Monaco, SymbolsNFM, monospace",
    "editor.fontSize": 13,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.inlineSuggest.enabled": true,
    "editor.stickyScroll.enabled": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.fontFamily": "Monaco, SymbolsNFM, monospace",
    "terminal.external.osxExec": "iTerm.app",
    "telemetry.telemetryLevel": "off",
    "files.watcherExclude": {
        "**/target/**": true
    },
    "extensions.ignoreRecommendations": true,
    // Neovim Mode
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.mouseSelectionStartVisualMode": true,
    "vscode-neovim.logOutputToConsole": true,
    // Git
    "git.autofetch": true,
    "gitlens.blame.avatars": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.avatars": false,
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.views.repositories.avatars": false,
    // Error Lens
    "errorLens.exclude": [
        "^\"[^\"]*\": Unknown word\\.$",
    ],
    // cSpell
    "cSpell.language": "en,en-US",
    "cSpell.languageSettings": [
        {
            "languageId": "latex",
            "ignoreRegExpList": [
                "\\\\\\w+([ %\\{])?"
            ]
        }
    ],
    "cSpell.dictionaries": [
        "userWords",
    ],
    "cSpell.dictionaryDefinitions": [
        {
            "name": "userWords",
            "path": "~/.config/nvim/spell/en.utf-8.add"
        }
    ],
    // Grammarly
    "grammarly.files.include": [
        "**/*.md",
        "**/*.tex",
        "**/*.txt"
    ],
    // Path Autocomplete
    "path-autocomplete.triggerOutsideStrings": true,
    // Github Copilot
    "github.copilot.enable": {
        "*": false,
    },
    // LaTeX
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.linting.chktex.exec.args": [
        "--globalrc"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
    ],
    "latex-workshop.message.badbox.show": false,
    // Rust
    "rust-analyzer.procMacro.enable": true,
    // Ruby
    "ruby.format": "rubocop",
    // Python
    "python.analysis.autoImportCompletions": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.terminal.activateEnvironment": false,
    "python.formatting.provider": "black",
    "jupyter.askForKernelRestart": false,
    // Json
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
}
