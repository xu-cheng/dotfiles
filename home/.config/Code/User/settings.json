{
    "editor.fontFamily": "Monaco, monospace",
    "editor.fontSize": 13,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.inlineSuggest.enabled": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.fontFamily": "Monaco, Hack Nerd Font, monospace",
    "terminal.external.osxExec": "iTerm.app",
    "telemetry.telemetryLevel": "off",
    "files.watcherExclude": {
        "**/target/**": true
    },
    // Vim Mode
    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "\"",
                "_",
                "d"
            ]
        },
        {
            "before": [
                "<leader>",
                "D"
            ],
            "after": [
                "\"",
                "_",
                "D"
            ]
        },
        {
            "before": [
                "<leader>",
                "s"
            ],
            "after": [
                "\"",
                "_",
                "s"
            ]
        },
        {
            "before": [
                "<leader>",
                "S"
            ],
            "after": [
                "\"",
                "_",
                "S"
            ]
        },
        {
            "before": [
                "<leader>",
                "x"
            ],
            "after": [
                "\"",
                "_",
                "x"
            ]
        },
        {
            "before": [
                "<leader>",
                "X"
            ],
            "after": [
                "\"",
                "_",
                "X"
            ]
        },
        {
            "before": [
                "<leader>",
                "v"
            ],
            "after": [
                "V",
                "`",
                "]"
            ]
        },
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        },
        {
            "before": [
                "<space>"
            ],
            "commands": [
                ":nohl"
            ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "\"",
                "_",
                "d"
            ]
        },
        {
            "before": [
                "<leader>",
                "D"
            ],
            "after": [
                "\"",
                "_",
                "D"
            ]
        },
        {
            "before": [
                "<leader>",
                "s"
            ],
            "after": [
                "\"",
                "_",
                "s"
            ]
        },
        {
            "before": [
                "<leader>",
                "S"
            ],
            "after": [
                "\"",
                "_",
                "S"
            ]
        },
        {
            "before": [
                "<leader>",
                "x"
            ],
            "after": [
                "\"",
                "_",
                "x"
            ]
        },
        {
            "before": [
                "<leader>",
                "X"
            ],
            "after": [
                "\"",
                "_",
                "X"
            ]
        },
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "<"
            ],
            "after": [
                "<",
                "g",
                "v"
            ]
        },
        {
            "before": [
                ">"
            ],
            "after": [
                ">",
                "g",
                "v"
            ]
        },
        {
            "before": [
                "<space>"
            ],
            "commands": [
                ":nohl"
            ]
        },
    ],
    // Git
    "git.autofetch": true,
    "gitlens.blame.avatars": false,
    "gitlens.hovers.avatars": false,
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.views.repositories.avatars": false,
    "gitlens.currentLine.enabled": false,
    // Error Lens
    "errorLens.exclude": [
        "^\"[^\"]*\": Unknown word\\.$",
    ],
    // cSpell
    "cSpell.language": "en,en-US",
    "cSpell.languageSettings": [
        {
            "languageId": "latex",
            "ignoreRegExpList": [
                "\\\\\\w+([ %\\{])?"
            ]
        }
    ],
    "cSpell.dictionaries": [
        "userWords",
    ],
    "cSpell.dictionaryDefinitions": [
        {
            "name": "userWords",
            "path": "~/.config/nvim/spell/en.utf-8.add"
        }
    ],
    // Grammarly
    "grammarly.autoActivate": false,
    // Path Autocomplete
    "path-autocomplete.triggerOutsideStrings": true,
    // Github Copilot
    "github.copilot.enable": {
        "*": false,
    },
    // LaTeX
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
    ],
    "latex-workshop.message.badbox.show": false,
    // Rust
    "rust-analyzer.procMacro.enable": true,
    "rust-analyzer.updates.askBeforeDownload": false,
    // Ruby
    "ruby.format": "rubocop",
    // Json
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
}
